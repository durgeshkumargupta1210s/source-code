# how to find the info of elements present in the periodictable....

import periodictable

def get_element_info(symbol):
    element=periodictable.elements.symbol(symbol)
    if element is None:
        print("invalid element symbool")
        return 
    print(f"Element : {element.name}")
    print(f"Symbol : {element.symbol}")
    print(f"Atomic number : {element.number}")
    print(f"Atomic weight : {element.mass}")
    print(f"Density : {element.density}")

element_symbool=input("enter the symol of element: ")
get_element_info(element_symbool)

